@page
    <div id="Grouping">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <form class="" id="EnterGroup">
                        <div class="form-group">
                            <label for="UsernameInput">Username</label>
                            <input type="text" class="form-control" id="UsernameInput" />
                        </div>
                        <div class="form-group">
                            <label for="GroupnameInput">Group</label>
                            <select id="GroupnameInput" class="form-control">
                                <option value="Developers">Developers</option>
                                <option value="The Others">The Others</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Join The Group</button>
                    </form>
                </div>

            </div>
        </div>
    </div>


<div id="Messaging" class="d-none">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <form id="SendMessage">
                <div class="form-group">
                    <label for="MessageInput">Message</label>
                    <textarea id="MessageInput" class="form-control"></textarea>
                </div>
                <button type="submit" id="" class="btn btn-success w-100">Send</button>

            </form>
            <button type="submit" id="LeaveGroupButton" class="btn btn-danger my-2 w-100">Leave</button>

        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
